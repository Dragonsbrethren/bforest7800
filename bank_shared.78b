          cmp #TYPE_MRSLIME
          beq set_poison_status
          cmp #TYPE_HSLIME
          beq set_poison_status
          cmp #TYPE_MHSLIME
          beq set_poison_status
          cmp #TYPE_SPIDER
          beq set_poison_status
          cmp #TYPE_GHOST
          beq set_curse_status
          cmp #TYPE_RGHOST
          beq set_curse_status
          cmp #TYPE_HGHOST
          beq set_curse_status
          cmp #TYPE_HARPY_QUEEN
          beq set_fury_status
          jmp .pc_damage

set_poison_status
          lda #BITS_POISON
          bne set_status_temp
set_curse_status
          lda #BITS_CURSE
          bne set_status_temp
set_stone_status
          lda #BITS_STONE
          bne set_status_temp
set_fury_status
          lda #BITS_FURY
set_status_temp
          sta temp1
          jsr .set_status
