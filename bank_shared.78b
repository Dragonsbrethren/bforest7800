        sta object_Xvel_lo,x
        lda object_Xvel_hi,x
        adc object_speed_hi,x
        sta object_Xvel_hi,x
follow_player_Y
        jsr randomize
        cmp #240
        bcs follow_player_done
        lda object_Ypos,x
        cmp player_Ypos
        bcc follow_player_Y_down
follow_player_Y_up
        lda #DIR_UP
        sta object_Ydir,x
        bne follow_player_Yvel
follow_player_Y_down
        lda #DIR_DOWN
        sta object_Ydir,x
follow_player_Yvel
        lda object_Yvel_lo,x
        clc
        adc object_speed_lo,x
        sta object_Yvel_lo,x
        lda object_Yvel_hi,x
        adc object_speed_hi,x
        sta object_Yvel_hi,x
follow_player_done
        rts
end
