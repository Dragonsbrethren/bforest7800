        asm
        ; add a little randomness to stop a constant movement pattern from happening
        jsr randomize
        cmp #240
        bcs follow_player_Y
follow_player_X
        lda object_Xpos,x
        cmp player_Xpos
        bcc follow_player_X_right
follow_player_X_left
        lda #DIR_LEFT
