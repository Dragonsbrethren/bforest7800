;==============================================================================
; SUBROUTINE: MOVE_OBJECT
;------------------------------------------------------------------------------
; Moves an object based on the non-fractional component of their velocities.
; Tests against an array of walkable tiles for current tileset before moving.
;
; All move test labels add 8 to Yposistion to allow objects to overlap
; unwalkable tiles that are above them. Objects are assumed to be 12x16
; and magic numbers are used throughout the code to improve the feel of
; player collisions with map tiles at the expense of other sprite proportions
;==============================================================================
move_object
        asm
          ; Cap the object's velocity TODO: separate X/Y cap?
mo_Xcap   lda object_vel_cap_hi,x
          cmp object_Xvel_hi,x
          bcs mo_Ycap
          sta object_Xvel_hi,x
          lda object_vel_cap_lo,x
          sta object_Xvel_lo,x
mo_Ycap
          lda object_vel_cap_hi,x
          cmp object_Yvel_hi,x
          bcs mo_capdone
          sta object_Yvel_hi,x
          lda object_vel_cap_lo,x
          sta object_Yvel_lo,x
mo_capdone
end

        ; Current direction(s) are determined by player input or AI logic
        ; optimization: bypass direction checks if no velocity
        asm
          lda object_Yvel_hi,x
          beq move_object_X
          lda object_Ydir,x
mo_Yup    cmp #DIR_UP
          bne mo_Ydown
          jsr .move_test_up
          jmp move_object_X
mo_Ydown  cmp #DIR_DOWN
          bne move_object_X
          jsr .move_test_down
move_object_X
          ldx index
          lda object_Xvel_hi,x
          beq move_object_done
          lda object_Xdir,x
mo_Xleft  cmp #DIR_LEFT
          bne mo_Xright
          jsr .move_test_left
          rts
mo_Xright cmp #DIR_RIGHT
          bne move_object_done
          jsr .move_test_right
move_object_done
          rts
end

move_test_up
        asm
        lda object_flags,x
        and #4
        beq move_test_up_no_fly
        jmp move_up
move_test_up_no_fly
        lda object_Xpos,x
        clc
        adc #2
        lsr
        lsr
        lsr
        sta peekX
        lda object_Ypos,x
        clc
        adc #8
        sec
        sbc object_Yvel_hi,x
        lsr
        lsr
        lsr
        lsr
        sta peekY
end
        move_tile_1 = peekchar (current_map, peekX, peekY, 20, 14)
;        peekX = (Xposition + 8) / TILE_WIDTH
        asm
        lda object_Xpos,x
        clc
        adc #8
        lsr
        lsr
        lsr
        sta peekX
end
        move_tile_2 = peekchar (current_map, peekX, peekY, 20, 14)
        asm
          jsr .test_walkable
          ldx index
          ; floating objects bypass solidity check if floatable tile
          lda object_flags,x
          and #%00010000
          beq test_walkable_up
          lda tile_properties
          and #%00000010
          beq test_walkable_up
          jmp move_up
test_walkable_up
          ; harpy's talon check
          ldx index
          bne test_walkable_up_ledge_done
          lda m_relic_bits_2
          and #%00000100
          beq test_walkable_up_ledge_done
          ; test for downward ledge, set hopping flag
          lda tile_properties
          and #%00010000
          beq test_walkable_up_ledge_done
          ; set object hopping direction and flag
          lda #0
          sta object_Xdir,x
          lda #DIR_UP
          sta object_Ydir,x
          lda object_flags,x
          ora #%00100000
          sta object_flags,x
test_walkable_up_ledge_done
          lda tile_properties
          ; test walkable bit 0
          lsr
          bcs move_up
          lda #0
          sta object_Yvel_lo,x
          sta object_Yvel_hi,x
          rts
move_up
          lda object_Ypos,x
          sec
          sbc object_Yvel_hi,x
          cmp #224
          bcc mo_up_s
          lda #0
mo_up_s   sta object_Ypos,x
          rts
end

move_test_down
        asm
          lda object_flags,x
          and #4
          beq move_test_down_no_fly
          jmp move_down
        ;peekX = (Xposition + 2) / TILE_WIDTH
        ;peekY = ((Yposition + Yvelocity_hi) + 15) / TILE_HEIGHT
move_test_down_no_fly
          lda object_Xpos,x
          clc
          adc #2
          lsr
          lsr
          lsr
          sta peekX
          lda object_Ypos,x
          clc
          adc #15
          clc
          adc object_Yvel_hi,x
          lsr
          lsr
          lsr
          lsr
          sta peekY
end
        move_tile_1 = peekchar (current_map, peekX, peekY, 20, 14)
        ;peekX = (Xposition + 8) / TILE_WIDTH
        asm
          lda object_Xpos,x
          clc
          adc #8
          lsr
          lsr
          lsr
          sta peekX
end
        move_tile_2 = peekchar (current_map, peekX, peekY, 20, 14)
        asm
          jsr .test_walkable
          ldx index
          ; floating objects bypass solidity check if floatable tile
          lda object_flags,x
          and #%00010000
          beq test_walkable_down
          lda tile_properties
          and #%00000010
          beq test_walkable_down
          jmp move_down
test_walkable_down
          ; test for downward ledge, set hopping flag
          lda tile_properties
          and #%00010000
          beq test_walkable_down_ledge_done
          ; set object hopping direction and flag
          lda #0
          sta object_Xdir,x
          lda #DIR_DOWN
          sta object_Ydir,x
          lda object_flags,x
          ora #%00100000
          sta object_flags,x
test_walkable_down_ledge_done
          lda tile_properties
          ; test walkable bit 0
          lsr
          bcs move_down
          lda #0
          sta object_Yvel_lo,x
          sta object_Yvel_hi,x
          rts
move_down
          ldx index
          lda object_Ypos,x
          clc
          adc object_Yvel_hi,x
          cmp #208
          bcc mo_dn_s
          lda #208
mo_dn_s   sta object_Ypos,x
          rts
end

move_test_left
        asm
          lda object_flags,x
          and #4
          beq move_test_left_no_fly
          jmp move_left
;        peekX = ((Xposition + 2) - Xvelocity_hi) / TILE_WIDTH
        ; Add 8 to Y position to allow object to overlap solid tiles above it slightly
;        peekY = (Yposition + 8) / TILE_HEIGHT
move_test_left_no_fly
        lda object_Xpos,x
        clc
        adc #2
        sec
        sbc object_Xvel_hi,x
        lsr
        lsr
        lsr
        sta peekX
        lda object_Ypos,x
        clc
        adc #8
        lsr
        lsr
        lsr
        lsr
        sta peekY
end
        move_tile_1 = peekchar (current_map, peekX, peekY, 20, 14)
;        peekY = (Yposition + 15) / TILE_HEIGHT
        asm
        lda object_Ypos,x
        clc
        adc #15
        lsr
        lsr
        lsr
        lsr
        sta peekY
end
        move_tile_2 = peekchar (current_map, peekX, peekY, 20, 14)
        asm
          jsr .test_walkable
          ldx index
          ; floating objects bypass solidity check if floatable tile
          lda object_flags,x
          and #%00010000
          beq test_walkable_left
          lda tile_properties
          and #%00000010
          beq test_walkable_left
          jmp move_left
test_walkable_left
        ; test for leftward ledge, set hopping flag
        ; if tile_properties{6} then Xdirection = DIR_LEFT : flags{5} = 1
        ; test if Harpy's Claw is available, allow hopping up ledge
        ; if m_relic_bits_2{2} && tile_properties{5} then Xdirection = DIR_LEFT : flags{5} = 1
        ; if !tile_properties{0} then Xvelocity = 0 : return
          lda tile_properties
          and #%01000000
          bne test_walkable_left_hop
          lda tile_properties
          and #%00100000
          beq test_walkable_left_ledge_done
          ldx index
          bne test_walkable_left_ledge_done
          lda m_relic_bits_2
          and #%00000100
          beq test_walkable_left_ledge_done
          ; set object hopping direction and flag
test_walkable_left_hop
          lda #0
          sta object_Ydir,x
          lda #DIR_LEFT
          sta object_Xdir,x
          lda object_flags,x
          ora #%00100000
          sta object_flags,x
test_walkable_left_ledge_done
          lda tile_properties
          ; test walkable bit 0
          lsr
          bcs move_left
          lda #0
          sta object_Yvel_lo,x
          sta object_Yvel_hi,x
          rts
move_left
          lda object_Xpos,x
          sec
          sbc object_Xvel_hi,x
          cmp #160
          bcc mo_lf_s
          lda #0
mo_lf_s   sta object_Xpos,x
          rts
end

move_test_right
        asm
          lda object_flags,x
          and #4
          beq move_test_right_no_fly
          jmp move_right
